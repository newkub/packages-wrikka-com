{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"declaration": true,
		"rootDir": "src",
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "src/index.ts"],
	"exclude": ["node_modules", "dist"]
}
